<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.beez.thehatgame.PlayActivity">

    <Button
        android:id="@+id/button_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="button_multi"
        android:text="@string/Button_Multi_Phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcode"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/button_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="109dp"
        android:layout_marginRight="109dp"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="48dp"
        android:onClick="button_single"
        android:text="@string/Button_Single_Phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seek_input"
        tools:ignore="OnClick" />

    <EditText
        android:id="@+id/pcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="84dp"
        android:layout_marginRight="85dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:text="@string/Text_passcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seek_play"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="154dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:max="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <SeekBar
        android:id="@+id/seek_input"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="164dp"
        android:layout_height="32dp"
        android:layout_marginEnd="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="4dp"
        android:max="4"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="137dp"
        android:layout_height="22dp"
        android:layout_marginEnd="123dp"
        android:layout_marginStart="124dp"
        android:layout_marginRight="123dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="72dp"
        android:text="# of Players 4-12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_multi" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="154dp"
        android:layout_marginStart="163dp"
        android:layout_marginRight="154dp"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="32dp"
        android:text="# of inputs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seek_play" />

    <TextView
        android:id="@+id/t_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="156dp"
        android:text="@string/Text_seekplay"
        app:layout_constraintBottom_toTopOf="@+id/seek_input"
        app:layout_constraintStart_toEndOf="@+id/seek_play"
        app:layout_constraintTop_toBottomOf="@+id/pcode" />

    <TextView
        android:id="@+id/t_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="175dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="239dp"
        android:text="@string/Text_seekinput"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seek_input"
        app:layout_constraintTop_toBottomOf="@+id/pcode" />
</android.support.constraint.ConstraintLayout>
